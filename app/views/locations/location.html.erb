<div id="map"
     class="location-map"
     style="width: 100vw; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="info-card">
  <p><%=@nearest.first.name%></p>
</div>
<span hidden class="userlon"></span>
<span hidden class="userlat"></span>
<span hidden class="destinlon"><%=@nearest.first.lon%></span>
<span hidden class="destinlat"><%=@nearest.first.lat%></span>
